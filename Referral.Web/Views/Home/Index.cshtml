@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .bg-image { /* The image used */
        content: url("/img/Banner/6.jpg"); /* Add the blur effect */
        filter: blur(8px);
        -webkit-filter: blur(1px); /* Full height */
        height: calc(100vh - 130px); /* Center and scale the image nicely */
        width: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    /* Position text in the middle of the page/image */
    .bg-text {
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0, 0.4); /* Black w/opacity/see-through */
        background-position: center;
        color: white;
        font-weight: bold;
        border: 3px solid #f1f1f1;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;
        width: 80%;
        padding: 20px;
        text-align: center;
    }
</style>

<div class="position-relative">
    <div class="bg-image"></div>
    <div class="bg-text">
        <h1 style="font-size:40px">Welcome to </h1>
        <h1 style="font-size:40px">Referral Management System!!</h1>
    </div>
</div>
